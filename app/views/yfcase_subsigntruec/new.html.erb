<h2>New</h2>
<%= current_user.first_name %><%= current_user.last_name %>
<%= form_for @signtruec , :url => yfcase_subsigntruecs_path( @yfcase ) do |f| %>
<div class="form-group">
    <%= f.hidden_field :signtruec, :value => "#{current_user.first_name}#{current_user.last_name}" %>
    <%= f.hidden_field :signtruec_first_name, :value => "#{current_user.first_name}" %>
    <%= f.hidden_field :signtruec_last_name, :value => "#{current_user.last_name}" %>
    <%= f.hidden_field :signtruec_date, :value => "#{Time.now.strftime('%Y-%m-%d')}" %>
</div>

<div class="form-group">
    <%= f.submit "同意", :class => "btn btn-primary" %>
</div>
<% end %>
<%= link_to "返回", yfcase_path(@yfcase) %>