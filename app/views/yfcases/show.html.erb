<p id="notice"><%= notice %></p>

<!-- YF評量表 -->
<h1 class="x110000">YF評量表</h1>


<!-- 基本資料 -->
<div class="basedata">
    <table class="table">
        <tr>
            <th style="border-bottom:1px dashed #000;">案號</th>
            <td style="border-bottom:1px dashed #000;">
                <%= @yfcase.case_number %>
            </td>
            <th style="border-bottom:1px dashed #000;">債務人</th>
            <td>
            	<% if @yfcase.personnals.where(is_debtor: true).count > 1 %>
                    <%= @yfcase.personnals.where(is_debtor: true).first.name %> ...共<%= @yfcase.personnals.where(is_debtor: true).count %>名<br>
                    <%= (@yfcase.co_owner == true ) ? '土地/建物共有人一致' : ' ' %>
                <% elsif @yfcase.personnals.where(is_debtor: true).count == 1 %>
                    <%= @yfcase.personnals.where(is_debtor: true).first.name %><br>
                    <%= (@yfcase.co_owner == true ) ? '土地/建物共有人一致' : ' ' %>
                <% else %>
                    <%= ' ' %>
                <% end %>
            </td>
            <th class="x110002" style="border-bottom:1px dashed #000;">債權人</th>
            <td class="x120002" style="border-bottom:1px dashed #000;">
                <% if @yfcase.personnals.where(is_creditor: true).count > 1 %>
                    <%= @yfcase.personnals.where(is_creditor: true).first.name %> ...共<%= @yfcase.personnals.where(is_creditor: true).count %>名
                <% elsif @yfcase.personnals.where(is_creditor: true).count == 1 %>
                    <%= @yfcase.personnals.where(is_creditor: true).first.name %>
                <% else %>
                    <%= ' ' %>
                <% end %>
            </td>
        </tr>
        <tr>
            <th class="x110003">地址</th>
            <td class="x120003">
                <%= @yfcase.township.try(:zip_code) %> <%= @yfcase.country.try(:name) %><%= \
                @yfcase.township.try(:name) %><%= @yfcase.other_address %>
            </td>
        </tr>
    </table>
</div>
<br>

<!-- 土地 -->
<div class="land">
    <table class="table">
        <tr>
            <th>地號</th>
            <th>地號謄本</th>
            <th>地坪(面積)<br>平方公尺(坪)</th>
            <th>持分</th>
            <th>地坪(持分)<br>平方公尺(坪)</th>
            <td></td>
            <th>地坪(面積)<br>平方公尺(坪)</th>
            <td></td>
            <th>建坪(面積)<br>平方公尺(坪)</th>
        </tr>
        <tr>
            <td>
                <% @yfcase.lands.each do |land| %>
                <%= land.land_number %><br>
                <% end %>
            </td>
            <td>
                <% @yfcase.lands.each do |land| %>
                <% if land.land_url == "" %>
                <%= link_to " " %> <br>
                <% else%>
                <%= link_to "連結", land.land_url, target: "_blank" %>　<br>
                <% end %>
                <% end %>
            </td>
            <td>
                <% @yfcase.lands.each do |land| %>
                <%= area(land.land_area,1,1,1).round(2) %> (
                <%= area(land.land_area,1,1,0.3025).round(2) %>) <br>
                <% end %>
            </td>
            <td>
                <% @yfcase.lands.each do |land| %>
                <%= land.land_holding_point_personal %>/
                <%= land.land_holding_point_all %> <br>
                <% end %>
            </td>
            <td>
                <% @yfcase.lands.each do |land| %>
                <%= area(land.land_area,land.land_holding_point_personal,land.land_holding_point_all,1).round(2) %> (
                <%= area(land.land_area,land.land_holding_point_personal,land.land_holding_point_all,0.3025).round(2) %>) <br>
                <% end %>
            </td>
            <td></td>
            <td>
                <% if @yfcase.lands.count ==0 %>
                <%= " " %>
                <% else %>
                <%= number_to_currency(@landtotalarea, unit: "", precision: 2) %> (
                <%= number_to_currency(@landtotalarea * 0.3025, unit: "", precision: 2) %>)
                <% end %>
            </td>
            <td></td>
            <td>
                <% if @yfcase.builds.count ==0 %>
                <%= " " %>
                <% else %>
                <%= number_to_currency(@buildtotalarea, unit: "", precision: 2) %> (
                <%= number_to_currency(@buildtotalarea * 0.3025, unit: "", precision: 2) %>)
                <% end %>
            </td>
        </tr>
    </table>
</div>
<br>  

<!-- 建物 -->
<div class="build">
    <table class="table">
        <tr>
            <th>建號</th>
            <th>建號謄本</th>
            <th>建坪(面積)<br>平方公尺(坪)</th>
            <th>持分</th>
            <th>建坪(持分)<br>平方公尺(坪)</th>
            <th>建物型/使用</th>
            <th>使用分區</th>
        </tr>
        <% @yfcase.builds.each do |build| %>
        <tr>
            <td>
                <%= build.build_number %>
            </td>
            <td>
                <% if build.build_url == "" %>
                <%= link_to " " %> <br>
                <% else%>
                <%= link_to "連結", build.build_url, target: "_blank" %>
                <% end %>
            </td>
            <td>
                <%= area(build.build_area,1,1,1).round(2) %> (
                <%= area(build.build_area,1,1,0.3025).round(2) %>)
            </td>
            <td>
                <%= build.build_holding_point_personal %>/
                <%= build.build_holding_point_all %>
            </td>
            <td>
                <%= area(build.build_area,build.build_holding_point_personal,build.build_holding_point_all,1).round(2) %> (
                <%= area(build.build_area,build.build_holding_point_personal,build.build_holding_point_all,0.3025).round(2) %>)
            </td>
            <td>
                <%= build.build_type_use %>
            </td>
            <td>
                <%= build.use_partition %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
<br>

<!-- 勘查結果 -->
<div class="attachment">
    <table class="table">
        <tr>
            <th>初勘日</th>
            <td>
                <%= @yfcase.first_survey_day %>
            </td>
        </tr>
        <tr>
            <th>會勘日</th>
            <td>
                <%= @yfcase.other_survey_day %>
            </td>
        </tr>
        <tr>
            <th>法拍公告(證物三)</th>
            <td>
                <%= link_to @yfcase.foreclosure_announcement_title, @yfcase.foreclosure_announcement_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>物件照片(證物四)</th>
            <td>
                <%= link_to @yfcase.object_photo_title, @yfcase.object_photo_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>實價登錄市價</th>
            <td>
                <table class="table table-bordered">
                    <tr class="danger">
                        <th>附件</th>
                        <th>地址</th>
                        <th>總價(萬)</th>
                        <th>建坪(坪)</th>
                        <th>單價(萬)</th>
                        <th>屋齡(年)</th>
                        <th>單位</th>
                        <th>樓高</th>
                        <% if user_signed_in? %>
                            <th>勘查員A</th>
                        <% end %>
                        <th>人員A</th>
                        <th>加成A</th>
                        <% if user_signed_in? %>
                            <th>勘查員B</th>
                        <% end %>
                        <th>人員B</th>
                        <th>加成B</th>
                        <th>計算</th>
                    </tr>
                    <% @yfcase.objectbuilds.each do |objectbuild| %>
                    <tr>
                        <td>
                            <% if objectbuild.objectbuild_url == "" %>
                                <%= link_to "" %>
                            <% else %>
                                <%= link_to "連結", objectbuild.objectbuild_url, target: "_blank" %>
                            <% end %>
                        </td>
                        <td>
                            <%= objectbuild.address %>
                        </td>
                        <td>
                            <%= objectbuild.total_price %>
                        </td>
                        <td>
                            <%= objectbuild.build_area %>
                        </td>
                        <td>
                            <%= holdingpoint(objectbuild.total_price,objectbuild.build_area).round(2) %>
                        </td>
                        <td>
                            <%= objectbuild.house_age %>
                        </td>

                        <td>
                            <%= objectbuild.floor_height %>
                        </td>
                            <% if user_signed_in? %>
                                <td>
                                    <% if objectbuild.plusa == nil %>
                                        <%= link_to "勘查員A", editplusratea_yfcase_objectbuild_path(@yfcase,objectbuild),class: "btn btn-primary bt-sm" %>
                                    <% else %>
                                        <%= link_to "勘查員A","#", disabled: true,class: "btn btn-default bt-sm", style: "color:#777;border:1px solid #777;" %>
                                    <% end %>
                                </td>
                            <% end %>  

                        <td>
                           <%= objectbuild.surveyora %>
                        </td>
                        <td>
                            <% @plusa=objectbuild.plusa %>
                            <%= @plusa %>
                        </td>
                            <% if user_signed_in? %>
                                <td>
                                    <% if objectbuild.plusb == nil %>
                                        <%= link_to "勘查員B", editplusrateb_yfcase_objectbuild_path(@yfcase,objectbuild),class: "btn btn-primary bt-sm" %>
                                    <% else %>
                                        <%= link_to "勘查員B","#", disabled: true,class: "btn btn-default bt-sm", style: "color:#777;border:1px solid #777;" %>
                                    <% end %>
                                </td>
                            <% end %>
                        <td>
                            <%= objectbuild.surveyorb %>
                        </td>
                        <td>
                            <% @plusb=objectbuild.plusb %>
                            <%= @plusb %>
                        </td>
                        <td>
                            <% @totalmesa = testvalue(objectbuild.total_price.to_f/objectbuild.build_area.to_f,@plusa,@plusb)*10000 %>
                            <%= number_to_currency(@totalmesa, unit: "", precision: 0 ) %>
                        </td>
                    </tr>
                    <% end %>
                </table>


                <%= link_to @yfcase.net_price_registration_market_price_title, @yfcase.net_price_registration_market_price_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>實價登錄地圖(證物五)</th>
            <td>
                <%= link_to @yfcase.net_price_registration_map_title, @yfcase.net_price_registration_map_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>實價登錄照片(證物六)</th>
            <td>
                <%= link_to @yfcase.net_price_registration_photo_title, @yfcase.net_price_registration_photo_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>法拍記錄(證物七)</th>
            <td>
                <%= link_to @yfcase.auction_record_title, @yfcase.auction_record_link, target: "_blank" %>
            </td>
        </tr>
        <tr>
            <th>備註</th>
            <td>
                <%= link_to @yfcase.other_notes %>
            </td>
        </tr>
        <tr>
            <th>會勘決議</th>
            <td>
                <%= @yfcase.survey_resolution %>
            </td>
        </tr>
    </table>
</div>
<br>

<!-- 建物查檢表 -->
<div class="buildchecklist">
    <table class="table">
        <tr>
            <th style="width:10%;">有(是) / 無(否)</th>
            <th style="width:40%;">查檢內容</th>
