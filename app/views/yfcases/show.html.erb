            <td>
                <%= buttonyeson(@yfcase.vegetable_market) %>
            </td>
            <th>09.是否鄰近菜市場</th>
        </tr>
        <!-- 第二行 -->
        <tr>
            <td>
                <%= buttonyeson(@yfcase.register) %>
            </td>
            <th>02.建物是否無未保存登記建物</th>
            <td>
                <%= buttonyeson(@yfcase.supermarket) %>
            </td>
            <th>10.是否鄰近大賣場</th>
        </tr>
        <!-- 第三行 -->
        <tr>
            <td>
                <%= buttonyeson(@yfcase.parking_space) %>
            </td>
