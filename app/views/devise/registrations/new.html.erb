<h2>註冊</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,"信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", \
                                                  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :first_name,"姓氏" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", \
                                                  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name,"名稱" %><br />
    <%= f.text_field :last_name, autocomplete: "email", \
                                                  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password,"密碼" %>
    <% if @minimum_password_length %>
    <em>(最少<%= @minimum_password_length %>個字元)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", \
                                                  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"密碼再次確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", \
                                                  class: "form-control" %>
  </div>
  <div class="field">
    <%= f.hidden_field :role, :value => 1 %>
  </div>
  <div class="actions">
    <%= f.submit "註冊", class: "form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

