<h2>編輯 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), \
                                              html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,"信箱" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", \
                                              class: "form-control" %>
  </div>


  <div class="field">
    <%= f.label :first_name,"姓氏" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", \
                                                  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name,"名稱" %><br />
    <%= f.text_field :last_name, autocomplete: "last_name", \
                                                  class: "form-control" %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password,"請輸入新密碼" %> <i>(如果您不想更改，請留空)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", \
                                              class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"請輸入再次新密碼做為二次確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", \
                                              class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password,"請輸入原始密碼以便驗証" %> \
    <i>(我們需要您當前的密碼來確認您的更改)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", \
                                                class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "form-control" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), \
                          data: { confirm: "你(妳)確定嗎?" }, method: :delete %></p>

<%= link_to "返回", :back %>
